<%= form_for(@registration) do |f| %>
<div id="needspace" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 style="color: #009dff">Find a space</h3>
  </div>
 
  <div class="modal-body">
    
    <% if @registration.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@registration.errors.count, "error") %> prohibited this registration from being saved:</h2>

        <ul>
        <% @registration.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="input-prepend">
      <div class="add-on"><i class="icon-user"></i>
    </div>
      <%= f.text_field :name, :placeholder => "Your name", :autocomplete => 'off' %>
    </div>

    <br/>

    <div class="input-prepend">
      <div class="add-on"><i class="icon-envelope"></i>
    </div>
      <%= f.text_field :email, :placeholder => "Email" %>
    </div>

    <br />

    <div class="input-prepend">
      <div class="add-on"><i class="icon-phone"></i>
    </div>
      <%= f.text_field :phone, :placeholder => 'Phone' %>
    </div>


    <div class="field">
      <%= f.hidden_field :vendortype, :value=> 'customer' %>
    </div>


    <br/>

    <div class="input-prepend">
      <div class="add-on"><i class="icon-map-marker"></i>
    </div>
      <%= f.text_field :location, :placeholder => 'City' %>
    </div>

    <br/>

    <div>
      <%= f.text_area :comment, :placeholder => 'Describe the venue you are looking for', :rows => 4 %>
    </div>

    <div class="actions">
      
    </div>
  

  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Close</a>
    <%= f.submit 'Submit', :class=> "btn btn-primary" %>

  </div>
</div>

<% end %>






