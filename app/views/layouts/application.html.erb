<!DOCTYPE html>
<html>
  <head>
    <title>PopStart - Accelerated Events</title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>

  <% if params[:controller] == 'registrations' %>

    <%= yield :view_style_includes %>
    <%= yield :view_javascript_includes %>
  <% else %>
    <%= stylesheet_link_tag    "normalize" %>
    <%= stylesheet_link_tag    "foundation" %>
    <%= stylesheet_link_tag    "prettyPhoto" %>
    <%= stylesheet_link_tag    "mainStyles" %>
    <%= stylesheet_link_tag    "camera" %>
    <%= stylesheet_link_tag    "simplemodal" %>
    <%= stylesheet_link_tag    "home" %>
    <%= stylesheet_link_tag    "popstart_form" %>
    <%= javascript_include_tag "foundation.min" %>
    <%= javascript_include_tag "foundation.orbit" %>
    <%= javascript_include_tag "jquery.arctext" %>
    <%= javascript_include_tag "jquery.easing.1.3" %>
    <%= javascript_include_tag "jquery.mobile.customized.min" %>
    <%= javascript_include_tag "jquery.prettyPhoto" %>
    <%= javascript_include_tag "jquery.tweet" %>
    <%= javascript_include_tag "jquery.simplemodal" %>
    <%= javascript_include_tag "zepto.min" %>
    <%= javascript_include_tag "custom.modernizr" %>

    <%= javascript_include_tag "filterable.pack" %>
    <%= javascript_include_tag "novakScript" %>
    <%= javascript_include_tag "camera" %>
  <% end %>

    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>    

    <meta name="description" content="Hexagonal - Clean Multipurpose Responsive Website">
    
    <!-- Set the viewport width to device width for mobile -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="HandheldFriendly" content="True">
    <meta name="MobileOptimized" content="320">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-touch-fullscreen" content="yes"/>
    
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="apple-touch-icon-144x144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="apple-touch-icon-114x114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="apple-touch-icon-72x72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="apple-touch-icon-57x57-precomposed.png">
    <link rel="apple-touch-icon" href="apple-touch-icon.png">
    <link rel="shortcut icon" href="favicon.ico" />
    
    <!-- This script prevents links from opening in Mobile Safari. https://gist.github.com/1042026 -->
    <script>(function(a,b,c){if(c in b&&b[c]){var d,e=a.location,f=/^(a|html)$/i;a.addEventListener("click",function(a){d=a.target;while(!f.test(d.nodeName))d=d.parentNode;"href"in d&&(d.href.indexOf("http")||~d.href.indexOf(e.host))&&(a.preventDefault(),e.href=d.href)},!1)}})(document,window.navigator,"standalone")</script>

    
  </head>
  <% if params[:controller] == 'registrations' %>
  <body class="animated fadeIn">
    <%= render 'layouts/header' %>
    <div class="container-fluid">
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "alert alert-#{key}") %>
      <% end %>
      <%= yield %>
    </div>
  </body>
  <% else %>
    <body>
      <%= yield %>
    </body>
  <% end %>
</html>